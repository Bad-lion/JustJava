<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />

            <gradient android:angle="180" android:endColor="#FF6F00" android:startColor="#FFE600" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="80dp" />
            <gradient android:angle="180" android:endColor="#FF5900" android:startColor="#FFD600" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="90dp" />
            <stroke android:width="1dp" android:color="#FFC800" />
            <gradient android:angle="180" android:endColor="#EEFF00" android:startColor="#FF6500" />
        </shape>
    </item>
</selector>